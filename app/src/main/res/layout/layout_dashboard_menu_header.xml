<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@drawable/bg_side_menu"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/view_header_main_language_selector_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.machinestalk.stayhome.components.TextView
            android:id="@+id/view_header_main_language_selector_text_view"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_language_slide_menu_bg"
            android:gravity="center"
            android:text="@string/SignIn_SignIn_lbl_language"
            android:textColor="#2BC7B7"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivUserImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_img_covid" />

        <com.machinestalk.stayhome.components.TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="COVID USER"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:font_path_from_assets="@string/font_semi_bold" />

    </LinearLayout>
</LinearLayout>