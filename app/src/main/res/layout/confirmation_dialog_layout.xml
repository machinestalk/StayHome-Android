<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/view_confirmation_dialog_top_bar"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="#000000" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_speaker" />

        <com.machinestalk.stayhome.components.TextView
            android:id="@+id/view_confirmation_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:font_path_from_assets="@string/font_bold"
            android:textStyle="bold"
            tools:text="@string/register_successfully" />

        <com.machinestalk.stayhome.components.TextView
            android:id="@+id/view_confirmation_dialog_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/black"
            android:lineSpacingExtra="6dp"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="@string/register_successfully"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.machinestalk.stayhome.components.Button
                android:id="@+id/view_confirmation_dialog_negative_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:padding="9dp"
                android:lines="1"
                android:background="@drawable/bg_btn_no"
                android:text="@string/Gen_Gen_lbl_no"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <com.machinestalk.stayhome.components.Button
                android:id="@+id/view_confirmation_dialog_positive_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn"
                android:text="@string/Gen_Gen_lbl_yes"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>