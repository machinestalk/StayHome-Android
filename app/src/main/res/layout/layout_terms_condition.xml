<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FaceRegistrationActivity">

    <include
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bt_agree"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.machinestalk.stayhome.components.TextView
                    android:id="@+id/description_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/desc_terms"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.machinestalk.stayhome.components.TextView
                    android:id="@+id/terms_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/terms_label"
                    android:textColor="@color/grayDark"
                    android:textSize="14sp" />

            </LinearLayout>
        </ScrollView>


        <com.machinestalk.stayhome.components.Button
            android:id="@+id/bt_agree"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_btn"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/myagreed"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>