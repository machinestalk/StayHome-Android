<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_fragment_bracelet_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/view_fragment_bracelet_menu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_dashboard_menu"/>

        <com.machinestalk.stayhome.components.TextView
            android:id="@+id/view_fragment_bracelet_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:textSize="@dimen/toolbar_text_size"
            android:text="@string/bracelet_fragment_title"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_fragment_bracelet_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_fragment_bracelet_toolbar"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/graphic_bracelet" />

    <com.machinestalk.stayhome.components.TextView
        android:id="@+id/view_fragment_bracelet_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fragment_bracelet_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/bracelet_fragment_add_bracelet_first_description"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/view_fragment_codes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fragment_bracelet_text_title"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_white_otp_code_bg"
            android:gravity="center">

            <com.machinestalk.stayhome.components.EditText
                android:id="@+id/view_fragment_bracelet_code_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:background="@color/colorTransparent"
                android:gravity="center"
                android:hint="-"
                android:inputType="text|textCapCharacters"
                android:maxLength="1"
                android:textAllCaps="true"
                android:textColor="@color/macAddressNormalColor"
                android:textColorHint="@color/macAddressNormalColor"
                android:textSize="16sp" />


            <com.machinestalk.stayhome.components.EditText
                android:id="@+id/view_fragment_bracelet_code_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:background="@color/colorTransparent"
